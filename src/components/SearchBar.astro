<div class="relative ml-4">
  <input
    type="text"
    id="search-input"
    placeholder="Search..."
    class="w-full lg:w-64 px-4 py-2 text-sm text-dubise-black bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-dubise-green transition-all duration-300"
  />
  <button
    id="search-button"
    class="absolute right-0 top-0 mt-2 mr-3 text-dubise-black hover:text-dubise-green transition-colors duration-200"
  >
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </button>
</div>

<script>
  const searchInput = document.getElementById('search-input');
  const searchButton = document.getElementById('search-button');

  searchButton.addEventListener('click', performSearch);
  searchInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      performSearch();
    }
  });

  function performSearch() {
    const query = searchInput.value.trim();
    if (query) {
      // Replace this with your actual search functionality
      window.location.href = `/search?q=${encodeURIComponent(query)}`;
    }
  }
</script>