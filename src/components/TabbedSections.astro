<div class="tabbed-sections mt-16">
  <h2 class="text-3xl md:text-4xl font-serif mb-8 text-center">Explore Dubai's Luxury</h2>
  
  <div class="tab-navigation mb-8 flex flex-wrap justify-center">
    {sections.map((section, index) => (
      <button
        class={`tab-button px-4 py-2 mx-2 my-1 rounded-full transition-colors duration-200 ${index === 0 ? 'bg-dubise-green text-white' : 'bg-gray-200 text-dubise-black hover:bg-dubise-green hover:text-white'}`}
        data-tab={index}
      >
        {section.title}
      </button>
    ))}
  </div>

  <div class="tab-content">
    {sections.map((section, index) => (
      <div class={`tab-pane ${index === 0 ? 'active' : 'hidden'}`} data-tab={index}>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {section.articles.map((article) => (
            <div class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform duration-300 hover:scale-105">
              <img src={article.image} alt={article.title} class="w-full h-48 object-cover" />
              <div class="p-6">
                <h3 class="text-xl font-serif mb-2">{article.title}</h3>
                <p class="text-gray-600 mb-4">{article.description}</p>
                <a href={article.url} class="inline-block bg-dubise-green text-white py-2 px-4 rounded hover:bg-opacity-80 transition-colors duration-200">
                  Read More
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>

<script>
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabPanes = document.querySelectorAll('.tab-pane');

  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabIndex = button.getAttribute('data-tab');
      
      tabButtons.forEach(btn => btn.classList.remove('bg-dubise-green', 'text-white'));
      tabPanes.forEach(pane => pane.classList.add('hidden'));
      
      button.classList.add('bg-dubise-green', 'text-white');
      document.querySelector(`.tab-pane[data-tab="${tabIndex}"]`).classList.remove('hidden');
    });
  });
</script>