---
import SearchBar from './SearchBar.astro';

const navItems = [
  { name: 'Home', url: '/' },
  { name: 'Fine Art', url: '/fine-art' },
  { name: 'Dining', url: '/dining' },
  { name: 'Properties', url: '/properties' },
  { name: 'Lifestyle', url: '/lifestyle' },
  { name: 'Guides', url: '/guides' },
  { name: 'Glossary', url: '/glossary' },
];
---

<header class="bg-white shadow-md relative">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl md:text-3xl font-serif font-bold text-dubise-green">Dubise</a>
    <div class="flex items-center">
      <nav class="hidden lg:block">
        <ul class="flex space-x-6">
          {navItems.map((item) => (
            <li>
              <a href={item.url} class="text-dubise-black hover:text-dubise-green transition-colors duration-200">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <SearchBar />
      <div class="hidden lg:flex items-center ml-6">
        <a href="/login" class="text-dubise-green hover:text-opacity-80 mr-4">Login</a>
        <a href="/register" class="bg-dubise-green text-white px-4 py-2 rounded hover:bg-opacity-80 transition-colors duration-200">Register</a>
      </div>
      <button id="mobile-menu-button" class="lg:hidden ml-4 text-dubise-black hover:text-dubise-green">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  <div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 right-0 bg-white shadow-md z-50">
    <nav class="container mx-auto px-4 py-4">
      <ul class="space-y-2">
        {navItems.map((item) => (
          <li>
            <a href={item.url} class="block text-dubise-black hover:text-dubise-green transition-colors duration-200 py-2">
              {item.name}
            </a>
          </li>
        ))}
        <li>
          <a href="/login" class="block text-dubise-green hover:text-opacity-80 py-2">Login</a>
        </li>
        <li>
          <a href="/register" class="block text-dubise-green hover:text-opacity-80 py-2">Register</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    if (!mobileMenu.contains(event.target) && !mobileMenuButton.contains(event.target)) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>