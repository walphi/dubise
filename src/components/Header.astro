    <div class="flex items-center">
      <nav class="hidden lg:block">
        <ul class="flex space-x-6">
          {navItems.map((item) => (
            <li>
              <a href={item.url} class="text-dubise-black hover:text-dubise-green transition-colors duration-200">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <SearchBar />
      <div class="hidden lg:flex items-center ml-6">
        <a href="/login" class="text-dubise-green hover:text-opacity-80 mr-4">Login</a>
        <a href="/register" class="bg-dubise-green text-white px-4 py-2 rounded hover:bg-opacity-80 transition-colors duration-200">Register</a>
      </div>
      <button id="mobile-menu-button" class="lg:hidden ml-4 text-dubise-black hover:text-dubise-green">
