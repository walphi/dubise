---
import { getPages } from '../strapiService';
import Layout from '../layouts/Layout.astro';
import TabbedSections from '../components/TabbedSections.astro';
import FeaturedArticles from '../components/FeaturedArticles.astro';
import LuxuryProperties from '../components/LuxuryProperties.astro';

const heroContent = {
  title: "Experience Unparalleled Luxury in Dubai",
  description: "Discover the pinnacle of art, dining, properties, and lifestyle in the city of gold",
  cta: {
    text: "Explore Our Exclusive Guides",
    url: "/guides"
  }
};
---

<Layout title="Dubise - Luxury Living in Dubai">
  <section class="hero bg-dubise-black text-white py-20 px-4 text-center" style="background-image: url('https://images.unsplash.com/photo-1700999506125-756d02b07cf4?q=80&w=2148&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;">
    <div class="bg-black bg-opacity-50 p-8 inline-block rounded">
      <h1 class="text-3xl md:text-5xl font-serif mb-4">{heroContent.title}</h1>
      <p class="text-lg md:text-xl mb-8">{heroContent.description}</p>
      <a href={heroContent.cta.url} class="bg-dubise-green text-white py-3 px-6 rounded-full hover:bg-opacity-80 transition-colors duration-200">
        {heroContent.cta.text}
      </a>
    </div>
  </section>

  <TabbedSections />

  <FeaturedArticles />

  <LuxuryProperties />

  <section class="cta bg-dubise-green text-white py-16 px-4 text-center mt-16" style="background-image: url('https://images.unsplash.com/photo-1552802903-767cd4958987?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;">
    <div class="bg-dubise-green bg-opacity-80 p-8 inline-block rounded">
      <h2 class="text-2xl md:text-3xl font-serif mb-4">Stay Updated with Dubise</h2>
      <p class="text-lg md:text-xl mb-8">Subscribe to our newsletter for exclusive luxury insights</p>
      <form class="flex flex-col sm:flex-row justify-center items-center">
        <input type="email" placeholder="Your email address" class="w-full sm:w-64 px-4 py-2 rounded-full text-dubise-black mb-4 sm:mb-0 sm:mr-4" required />
        <button type="submit" class="bg-white text-dubise-green py-2 px-6 rounded-full hover:bg-opacity-80 transition-colors duration-200">
          Subscribe
        </button>
      </form>
    </div>
  </section>
</Layout>