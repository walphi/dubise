---
import Layout from '../layouts/Layout.astro';
import FeaturedPost from '../components/FeaturedPost.astro';
import PropertyHighlight from '../components/PropertyHighlight.astro';

const featuredPosts = [
  {
    title: 'The Architectural Marvel of Burj Khalifa',
    image: 'https://images.unsplash.com/photo-1583759604327-f9dcd23499d5?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    excerpt: 'Discover the engineering feat and luxury experiences at the world\'s tallest building.',
    url: '/blog/burj-khalifa-marvel',
  },
  {
    title: 'Dubai\'s Skyline: A Testament to Luxury',
    image: 'https://images.unsplash.com/photo-1547153388-cb6959ce1a56?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    excerpt: 'Explore the iconic skyline that defines Dubai\'s luxurious and futuristic landscape.',
    url: '/blog/dubai-skyline-luxury',
  },
  {
    title: 'Desert Adventures: Luxury Meets Nature',
    image: 'https://images.unsplash.com/photo-1508655826745-dfce6993b8f4?q=80&w=2148&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    excerpt: 'Experience the perfect blend of opulence and natural beauty in Dubai\'s desert escapes.',
    url: '/blog/desert-luxury-adventures',
  },
];

const featuredProperty = {
  title: 'Opulent Penthouse with Burj Khalifa View',
  image: '/images/dubai-night.jpg',
  price: '$25,000,000',
  bedrooms: 5,
  bathrooms: 6,
  area: '12,000 sq ft',
  url: '/properties/burj-khalifa-view-penthouse',
};
---

<Layout title="Dubise - Luxury Living in Dubai">
  <section class="hero bg-dubise-black text-white py-20 px-4 text-center" style="background-image: url('https://images.unsplash.com/photo-1650435331422-7a806b2b02c6?q=80&w=2187&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;">
    <div class="bg-black bg-opacity-50 p-8 inline-block rounded">
      <h1 class="text-5xl font-serif mb-4">Experience Unparalleled Luxury in Dubai</h1>
      <p class="text-xl mb-8">Discover the pinnacle of art, dining, properties, and lifestyle in the city of gold</p>
      <a href="/guides" class="bg-dubise-gold text-white py-3 px-6 rounded-full hover:bg-opacity-80 transition-colors duration-200">
        Explore Our Exclusive Guides
      </a>
    </div>
  </section>

  <section class="featured-posts my-16">
    <h2 class="text-3xl font-serif mb-8 text-center">Featured Articles</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {featuredPosts.map((post) => (
        <FeaturedPost post={post} />
      ))}
    </div>
  </section>

  <section class="property-highlight my-16">
    <h2 class="text-3xl font-serif mb-8 text-center">Featured Property</h2>
    <PropertyHighlight property={featuredProperty} />
  </section>

  <section class="cta bg-dubise-gold text-white py-16 px-4 text-center" style="background-image: url('/images/dubai-wallpaper.jpg'); background-size: cover; background-position: center;">
    <div class="bg-dubise-gold bg-opacity-80 p-8 inline-block rounded">
      <h2 class="text-3xl font-serif mb-4">Subscribe to Our Premium Luxury Guides</h2>
      <p class="text-xl mb-8">Gain exclusive access to insider knowledge and expert insights on Dubai's luxury scene</p>
      <a href="/subscribe" class="bg-white text-dubise-gold py-3 px-6 rounded-full hover:bg-opacity-80 transition-colors duration-200">
        Subscribe Now
      </a>
    </div>
  </section>
</Layout>