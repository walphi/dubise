---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const guides = [
  {
    title: '5 Top Places to Buy a Luxury Property in Dubai',
    image: '/images/dubai-marina.jpg',
    description: 'Discover the most exclusive neighborhoods for luxury real estate in Dubai.',
    price: '$29.99',
    url: '/guides/top-5-luxury-property-locations',
  },
  {
    title: 'The Ultimate Guide to Fine Dining in Dubai',
    image: '/images/madinat-jumeirah.jpg',
    description: 'Explore the best restaurants and culinary experiences in Dubai.',
    price: '$24.99',
    url: '/guides/ultimate-fine-dining-guide',
  },
  {
    title: 'Dubai\'s Hidden Art Gems',
    image: '/images/al-fahidi-neighbourhood.jpg',
    description: 'Uncover the lesser-known art galleries and exhibitions in Dubai.',
    price: '$19.99',
    url: '/guides/hidden-art-gems',
  },
];

const crumbs = [
  { title: 'Guides', href: '/guides' }
];
---

<Layout title="Luxury Guides - Dubise">
  <Breadcrumbs crumbs={crumbs} />
  <h1 class="text-4xl font-serif mb-8">Exclusive Luxury Guides</h1>
  <p class="text-xl mb-12">Gain insider knowledge and expert insights with our premium guides to luxury living in Dubai.</p>

  <section class="guides-list">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {guides.map((guide) => (
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          <img src={guide.image} alt={guide.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-serif mb-2">{guide.title}</h3>
            <p class="text-gray-600 mb-4">{guide.description}</p>
            <p class="text-dubise-gold text-xl mb-4">{guide.price}</p>
            <a href={guide.url} class="block w-full text-center bg-dubise-black text-white py-2 rounded hover:bg-opacity-80 transition-colors duration-200">
              Purchase Guide
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="subscription-offer mt-16 bg-dubise-gold text-white p-8 rounded-lg" style="background-image: url('/images/dubai-skyline.jpg'); background-size: cover; background-position: center;">
    <div class="bg-dubise-gold bg-opacity-80 p-8 rounded">
      <h2 class="text-3xl font-serif mb-4">Subscribe to All Guides</h2>
      <p class="text-xl mb-6">Get unlimited access to all our luxury guides and future updates for a monthly fee.</p>
      <div class="flex justify-between items-center">
        <div>
          <p class="text-2xl font-bold">$49.99/month</p>
          <p class="text-sm">Cancel anytime</p>
        </div>
        <a href="/subscribe" class="bg-white text-dubise-gold py-3 px-6 rounded-full hover:bg-opacity-80 transition-colors duration-200">
          Subscribe Now
        </a>
      </div>
    </div>
  </section>
</Layout>